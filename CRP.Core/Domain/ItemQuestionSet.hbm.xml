<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="CRP.Core" namespace="CRP.Core.Domain">
  <class
    name="ItemQuestionSet"
    table="ItemQuestionSets" >
    <id name="ID" access="nosetter.lowercase" column="id" unsaved-value="0">
      <generator class="identity" />
    </id>

    <many-to-one name="Item" class="CRP.Core.Domain.Item, CRP.Core" column="ItemId" cascade="none" not-null="true" />
    <many-to-one name="QuestionSet" class="CRP.Core.Domain.QuestionSet, CRP.Core" column="QuestionSetId" cascade="none" not-null="true" />
    <property name="TransactionLevel" column="TransactionLevel" />
    <property name="QuantityLevel" column="QuantityLevel" />
    <property name="Order" column="[Order]" />
    <property name="Required" column="Required" />
    
  </class>
</hibernate-mapping>