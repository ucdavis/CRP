<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="CRP.Core" namespace="CRP.Core.Domain">
  <class
    name="ItemType"
    table="ItemTypes" >
    <id name="Id" column="id">
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" />
    <property name="IsActive" column="IsActive" />

    <bag name="ExtendedProperties" table="ExtendedProperties" cascade="all-delete-orphan" order-by="[Order]">
      <key column="ItemTypeId" />
      <one-to-many class="CRP.Core.Domain.ExtendedProperty, CRP.Core" />
    </bag>

    <bag name="QuestionSets" table="ItemTypesXQuestionSets" cascade="all-delete-orphan">
      <key column="ItemTypeId" />
      <many-to-many column="QuestionSetId" class="CRP.Core.Domain.QuestionSet, CRP.Core" />
    </bag>

    <bag name="Items" table="Items" cascade="none" inverse="true">
      <key column="ItemTypeId"/>
      <one-to-many class="CRP.Core.Domain.Item, CRP.Core"/>
    </bag>
    
  </class>
</hibernate-mapping>