<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="CRP.Core" namespace="CRP.Core.Domain">
  <class
    name="ItemType"
    table="ItemTypes" >
    <id name="ID" access="nosetter.lowercase" column="id" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" />
    <property name="IsActive" column="IsActive" />

    <bag name="ExtendedProperties" table="ExtendedProperties" cascade="all-delete-orphan">
      <key column="ItemTypeId" />
      <one-to-many class="CRP.Core.Domain.ExtendedProperty, CRP.Core" />
    </bag>
    
  </class>
</hibernate-mapping>