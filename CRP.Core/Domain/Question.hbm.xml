<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="CRP.Core" namespace="CRP.Core.Domain">
  <class
    name="Question"
    table="Questions" >
    <id name="ID" access="nosetter.lowercase" column="id" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" />
    <many-to-one name="QuestionType" class="CRP.Core.Domain.QuestionType, CRP.Core" column="QuestionTypeId" cascade="none" not-null="true" fetch="join" />
    <property name="CollegeReusable" column="CollegeReusable" />
    <property name="SystemReusable" column="SystemReusable" />
    <property name="UserReusable" column="UserReusable" />

    <bag name="Options" table="QuestionOptions" cascade="all-delete-orphan" fetch="join">
      <key column="QuestionId" />
      <one-to-many class="MAAPS2.Core.Domain.Question, MAAPS2.Core" />
    </bag>
  </class>
</hibernate-mapping>