<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="CRP.Core" namespace="CRP.Core.Domain">
  <class
    name="Check"
    table="Checks" >
    <id name="Id" column="id">
      <generator class="identity" />
    </id>

    <property name="Payee" column="Payee" not-null="true" />
    <property name="CheckNumber" column="CheckNumber" not-null="true" />
    <property name="Amount" column="Amount" not-null="true" />
    <property name="DateReceived" column="DateReceived" not-null="true" />

    <many-to-one name="Transaction" class="CRP.Core.Domain.Transaction, CRP.Core" column="TransactionId" fetch="join" />
    
  </class>
</hibernate-mapping>