@model CRP.Core.Domain.PaymentLog


@Html.Hidden("Id", Model.Id)
@Html.Hidden("Accepted", Model.Accepted, new { @class = "accepted-field" })

<div class="">
    @if (Model.DisplayCheckInvalidMessage)
    {
        <span>*There is a problem with this check or another listed</span>
    }
    <div class="form-group">
        <label>Payee:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label>Check Number:</label>
        @Html.TextBoxFor(x => x.CheckNumber, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.CheckNumber)
    </div>
    <div class="form-group">
        <label>Amount:</label>
        @Html.TextBoxFor(x => x.Amount, new { @class = "amount form-control", @type = "number", required = "required", min=0, max=100000000 })
        @Html.ValidationMessageFor(x => x.Amount)
    </div>
    <div class="form-group">
        <label>Date Payment:</label>
        @Html.TextBoxFor(x => x.DatePayment, "{0:d}", new { @class = "date form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.DatePayment)
    </div>
    <div class="form-group">
        <label>Notes:</label>
        @Html.TextBoxFor(x => x.Notes, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Notes)
    </div>
</div>
