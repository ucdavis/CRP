@model IEnumerable<CRP.Core.Domain.QuestionSet>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@section NavButtons
{
    <div class="pull-right">
        @Html.Partial("_LogonPartial")
    </div>
}


<div class="boundary">

    <p>
        @Html.ActionLink("Create", "Create")
    </p>
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollegeReusable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemReusable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserReusable)
            </th>
            <th>
                User
            </th>
            <th>
                # of Questions
            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Select", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CollegeReusable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SystemReusable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserReusable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Questions.Count)
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>
    
@section AdditionalScripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(function() {
            $(".table").dataTable({
                "aoColumnDefs": [
                    { 'bSortable': false, 'aTargets': [0] }, //Disables sort on icon columns
                    { 'type': 'boolean', 'aTargets': [2,3,4] }
                ]
            });
        });
    </script>
}

@section AdditionalStyles
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" />
}